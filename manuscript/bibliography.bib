issn = {10959238},
journal = {Journal of Archaeological Science},
keywords = {Archaeobotany,Early agriculture,Europe,Ireland,Neolithic},
pages = {206--215},
publisher = {Elsevier Ltd},
title = {{Neolithic farming in north-western Europe: Archaeobotanical evidence from Ireland}},
url = {http://dx.doi.org/10.1016/j.jas.2012.10.022},
